<?xml version="1.0" encoding="UTF-8"?>
<menu-list>
	<menu id="add_menu">
		<name>add</name>
		<index>1</index>
		<content>use add command to add new address entry</content>
		<handle-option>add</handle-option>
		<menu-quit>false</menu-quit>
		<handle-class>com.ericsson.javatraining.addressbook.action.AddAddressAction
		</handle-class>
	</menu>

	<menu id="search_menu">
		<name>search</name>
		<index>2</index>
		<content>use search command to get one or more address entries</content>
		<handle-option>search</handle-option>
		<menu-quit>false</menu-quit>
		<handle-class>com.ericsson.javatraining.addressbook.action.SearchAddressAction
		</handle-class>
	</menu>

	<menu id="save_menu">
		<name>save</name>
		<index>3</index>
		<content>Save all</content>
		<handle-option>save</handle-option>
		<menu-quit>false</menu-quit>
		<handle-class>com.ericsson.javatraining.addressbook.action.SaveAddressBookAction
		</handle-class>
	</menu>
	
	<menu id="quit_menu">
		<name>quit_menu</name>
		<index>4</index>
		<content>quit from the application</content>
		<handle-option>!quit</handle-option>
		<menu-quit>true</menu-quit>
		<handle-class>com.ericsson.javatraining.addressbook.action.QuitAction
		</handle-class>
	</menu>
</menu-list>